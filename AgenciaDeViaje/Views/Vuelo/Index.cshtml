@model IEnumerable<AgenciaDeViaje.Models.Vuelo>
           

@{
    ViewBag.Title = "Index";
}
@section header
{
   
}


<h2>Buscar Vuelos</h2>



@if(Model.Count(p=>p.Id>0)>0){
<table>
    <tr>
        <th>
            Procedencia
        </th>
        <th>
            Destino
        </th>
        <th>
            Salida
        </th>
        <th>
            Llegada
        </th>
        <th></th>
    </tr>
    </table>
    }

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Procedencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destino)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Llegada)
        </td>
        <td>
            @Html.ActionLink("Reservar", "reservar", new { id=item.Id }) |
            @Html.ActionLink("Comprar", "comprar", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
