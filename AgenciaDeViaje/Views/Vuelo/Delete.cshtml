@model AgenciaDeViaje.Models.Vuelo

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Vuelo</legend>

    <div class="display-label">Procedencia</div>
    <div class="display-field">@Model.Procedencia</div>

    <div class="display-label">Destino</div>
    <div class="display-field">@Model.Destino</div>

    <div class="display-label">Salida</div>
    <div class="display-field">@String.Format("{0:g}", Model.Salida)</div>

    <div class="display-label">Llegada</div>
    <div class="display-field">@String.Format("{0:g}", Model.Llegada)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> 
        @Html.ActionLink("Back to List", "Index", null, new { @class = "button" })
    </p>
}


