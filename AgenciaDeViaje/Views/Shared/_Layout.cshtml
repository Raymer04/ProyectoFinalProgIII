<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    
    <!--jQuery References-->
    <script src="../../Content/wijmo/js/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="../../Content/wijmo/js/jquery-ui.min.js" type="text/javascript"></script>
    <!--Theme-->
    <link href="http://cdn.wijmo.com/themes/aristo/jquery-wijmo.css" rel="stylesheet" type="text/css" title="sterling-jqueryui" />
    <!--Wijmo Widgets CSS-->
    <link href="../../Content/wijmo/css/jquery.wijmo-complete.all.2.0.5.min.css" rel="stylesheet" type="text/css" />
    <!--Wijmo Widgets JavaScript-->
    <script src="../../Content/wijmo/js/jquery.wijmo-open.all.2.0.5.min.js" type="text/javascript"></script>
    <script src="../../Content/wijmo/js/jquery.wijmo-complete.all.2.0.5.min.js" type="text/javascript"></script>
    <script src="../../Content/wijmo/js/globalize.cultures.js" type="text/javascript"></script>
    @RenderSection("header", false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div>
                <img alt="" src="../../Content/images/Logo.png" style="margin-top: -30px; float: left; margin-left: -10px;" />
                 <div id="logindisplay">
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
           
            <div id="menucontainer">
                <ul id="nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>                
                    <li>@Html.ActionLink("Mi Perfil", "Details", "Clients")
                        <ul> 
                            <li> @Html.ActionLink("Boletos Comprados", "Index", "Boletos", new { tipo = 1 }, new { @class = "label" })</li>
                            <li> @Html.ActionLink("Boletos Reservados", "Index", "Boletos", new { tipo = 2 }, new { @class = "label" })</li>
                            <li> @Html.ActionLink("Lista De Espera", "Index", "Boletos", new { tipo = 3 }, new { @class = "label" })</li>
                         </ul>
                    </li>
                    
                    <li>@Html.ActionLink("Acerca de nosotros", "About", "Home")</li>
                   @{
                       if(Session["usuario"]!=null){
                    if(((int)Session["tipoUsuario"])==1){<li>@Html.ActionLink("Mantenimiento de Clientes", "Index", "Clients")</li>
                       }}
                       }
                </ul>
            </div>
            <div id="main">
            @RenderBody()
            <div id="footer">
                AeroCaribe, Lo llevamos a conocer el mundo!
           </div>
        </div>
        </div>

    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#nav").wijmenu();
            $(".button").button();
            $(":input[type='submit']").button();
            $(":input[type='checkbox']").wijcheckbox();
            $(":input[type='text'],:input[type='password'],textarea").not(":wijmo-wijinputnumber").not(":wijmo-wijinputmask").not(":wijmo-wijinputdate").wijtextbox();
            $("select").not(":wijmo-wijcombobox").wijdropdown();
        });
    </script>
</body>
</html>
