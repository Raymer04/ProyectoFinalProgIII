@model IEnumerable<AgenciaDeViaje.Models.Boleto>

@{
    ViewBag.Title = "Index";
}


<table id="listGrid">
	<thead>
    <tr>
        <th></th>
    </tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Details", "Details", null, new { id=item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Delete", "Delete", null, new { id=item.Id }, new { @class = "button" })
        </td>
    </tr>
}
</tbody>
</table>
<script type="text/javascript">
	$(document).ready(function () {
		$("#listGrid").wijgrid({ allowSorting: true, allowPaging: true, pageSize: 20});
	});
</script>

