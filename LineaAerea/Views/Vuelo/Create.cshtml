@model LineaAerea.Models.Vuelo

@{
    ViewBag.Title = "Crear vuelo";
}

@section header{
    <script type="text/javascript">
      $(document).ready(function () {
        $('#time').timepicker({
            showPeriod: true,
            showLeadingZero: true
        });
    });
    </script>

}

<h2>Crear</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Vuelo</legend>

          <div class="editor-label">
            @Html.LabelFor(model => model.ProcedenciaID,"Procedencia")
        </div>
         <div class="editor-field">
            @Html.DropDownListFor(model => model.ProcedenciaID, (IEnumerable<SelectListItem>)ViewBag.ProcedenciaID,"--Seleccione--")
            @Html.ValidationMessageFor(model => model.ProcedenciaID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DestinoID,"Destino")
        </div>
       <div class="editor-field">
            @Html.DropDownListFor(model => model.DestinoID, (IEnumerable<SelectListItem>)ViewBag.DestinoID, "--Seleccione--")
            @Html.ValidationMessageFor(model => model.DestinoID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaSalida,"Fecha de salida")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FechaSalida)
            @Html.ValidationMessageFor(model => model.FechaSalida)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HoraSalida,"Hora de salida")
        </div>
        <div class="editor-field">
           <input type="text" name="hora" id="time"/>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Duracion,"Duracion(en horas)")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Duracion)
            @Html.ValidationMessageFor(model => model.Duracion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AvionID,"Avion")
        </div>

        <div class="editor-field">
            @Html.DropDownListFor(model => model.AvionID, (IEnumerable<SelectListItem>)ViewBag.AvionID, "--Seleccione--")
            @Html.ValidationMessageFor(model => model.AvionID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "button" })
</div>

