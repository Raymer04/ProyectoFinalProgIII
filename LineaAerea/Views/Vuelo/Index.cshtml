@model IEnumerable<LineaAerea.Models.Vuelo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "button" })
</p>
<table id="listGrid">
	<thead>
    <tr>
        <th></th>
        <th>
            Procedencia
        </th>
        <th>
            Destino
        </th>
        <th>
            Fecha de salida
        </th>
        <th>
            Hora de salida
        </th>
        <th>
            Duracion del vuelo
        </th>
        <th>
            Avion
        </th>
    </tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", null, new { id=item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Delete", "Delete", null, new { id=item.Id }, new { @class = "button" })
        </td>
        <td>
            @item.Procedencia.Lugar
        </td>
        <td>
            @item.Destino.Lugar
        </td>
        <td>
            @String.Format("{0:g}", item.FechaSalida)
        </td>
        <td>
            @item.HoraSalida
        </td>
        <td>
            @item.Duracion horas
        </td>
        <td>
            @item.Avion.Modelo
        </td>
    </tr>
}
</tbody>
</table>
<script type="text/javascript">
	$(document).ready(function () {
		$("#listGrid").wijgrid({ allowSorting: true, allowPaging: true, pageSize: 20});
	});
</script>

