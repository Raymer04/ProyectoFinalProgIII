@model IEnumerable<LineaAerea.Models.Avion>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Crear", null, new { @class = "button" })
</p>
<table id="listGrid">
	<thead>
    <tr>
        <th></th>
        <th>
            Marca
        </th>
        <th>
            Modelo
        </th>
        <th>
            Capacidad de pasajeros
        </th>
    </tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Edit", null, new { id=item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Eliminar", "Delete", null, new { id=item.Id }, new { @class = "button" })
        </td>
        <td>
            @item.Marca
        </td>
        <td>
            @item.Modelo
        </td>
        <td>
            @item.CapacidadPasajeros
        </td>
    </tr>
}
</tbody>
</table>
<script type="text/javascript">
	$(document).ready(function () {
		$("#listGrid").wijgrid({ allowSorting: true, allowPaging: true, pageSize: 20});
	});
</script>

