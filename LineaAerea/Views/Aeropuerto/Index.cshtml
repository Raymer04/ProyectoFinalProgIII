@model IEnumerable<LineaAerea.Models.Aeropuerto>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "button" })
</p>
<table id="listGrid">
	<thead>
    <tr>
        <th></th>
        <th>
            Nombre
        </th>
        <th>
            Lugar
        </th>
    </tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Edit", null, new { id=item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Eliminar", "Delete", null, new { id=item.Id }, new { @class = "button" })
        </td>
        <td>
            @item.Nombre
        </td>
        <td>
            @item.Lugar
        </td>
    </tr>
}
</tbody>
</table>
<script type="text/javascript">
	$(document).ready(function () {
		$("#listGrid").wijgrid({ allowSorting: true, allowPaging: true, pageSize: 20});
	});
</script>

